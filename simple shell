/* prompt func updated!

#include "shell.h"

char **prompt(void)
{
        size_t gline, n;
        int i = 0, j = 0, k = 0;
        char *token,*token_l, *linp = NULL, *lin;
        char **commands;
 
        
	
	gline = getline(&linp, &n, stdin);
	if (gline == -1)
	{
		perror("can not allocate mem (l:16)");
		exit (EXIT_FAILURE);
	}
 
        lin = strdup(linp);
        printf("%s", lin);
        token_l = strtok(lin, " ");
        while (token_l)
        {
            printf("[%dth] word is %s\n",k+1, token_l);
            k++;
            token_l = strtok(NULL, " ");
        }
        
        token = strtok(linp, " ");
        commands = malloc(sizeof(char *) * (k+1));
        if (commands == NULL)
        {
		perror("can not allocate mem (l:9)");
		exit (EXIT_FAILURE);
        }
        
        while (token)
        {
                commands[i] = malloc(sizeof(char) * strlen(token));
                strcpy(commands[i], token);
                token = strtok(NULL, " ");
                i++;
        }
 
        commands[i] = NULL;
 
 
        free(linp);
        while (commands[j])
        {
               	if (j != 0)
			printf("\n");	
		printf("%s", commands[j]);
		free(commands[j]);
		j++;
	}
	printf("go to main\n");
	return(commands);
}
 
 
         
         --------------------------------
#include "shell.h"
 
int main()
{
        printf("> ");
        prompt();
        return(0);
}

